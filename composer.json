{
    "name": "yii-extension/simple-widget",
    "type": "library",
    "description": "Simple widget for yii3.",
    "keywords": [
        "yii3",
        "simple",
        "widget"
    ],
    "license": "BSD-3-Clause",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "roave/infection-static-analysis-plugin": "^1.7",
        "vimeo/psalm": "^4.6",
        "yiisoft/html": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "Yii\\Extension\\Widget\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yii\\Extension\\Widget\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
